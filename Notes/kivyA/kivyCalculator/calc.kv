<CustBoxLayout@BoxLayout>:
    size_hint_y: 1.1
    spacing: 1

<CustButton@Button>:
    font_size: 26
    background_normal: ""
    background_color: 0.85,0.85,0.85,1
    color: 0,0,0,1

<OrangeButton@CustButton>:
    background_color: 1,0.5,0,1
    color: 1,1,1,1


<CalcLayout>:
    spacing: 1
    padding: 1
    id: calculator
    display: display
    orientation: "vertical"
    TextInput:
        size_hint_y: 1.5
        background_normal: ""
        background_color: 0.5,0.5,0.5,1
        foreground_color: 1,1,1,1
        font_size: 50
        id: display
    CustBoxLayout:
        CustButton:
            text: "AC"
            on_press: display.text = ""
        CustButton:
            text: "("
            on_press: display.text += self.text
        CustButton:
            text: ")"
            on_press: display.text += self.text
        OrangeButton:
            text: "/"
            on_press: display.text += self.text
    CustBoxLayout:
        CustButton:
            text: "7"
            on_press: display.text += self.text
        CustButton:
            text: "8"
            on_press: display.text += self.text
        CustButton:
            text: "9"
            on_press: display.text += self.text
        OrangeButton:
            text: "*"
            on_press: display.text += self.text
    CustBoxLayout:
        CustButton:
            text: "4"
            on_press: display.text += self.text
        CustButton:
            text: "5"
            on_press: display.text += self.text
        CustButton:
            text: "6"
            on_press: display.text += self.text
        OrangeButton:
            text: "-"
            on_press: display.text += self.text
    CustBoxLayout:
        CustButton:
            text: "1"
            on_press: display.text += self.text
        CustButton:
            text: "2"
            on_press: display.text += self.text
        CustButton:
            text: "3"
            on_press: display.text += self.text
        OrangeButton:
            text: "+"
            on_press: display.text += self.text
    CustBoxLayout:
        CustButton:
            text: "0"
            on_press: display.text += self.text
            size_hint_x: 2
        CustButton:
            text: "."
            on_press: display.text += self.text
        CustButton:
            text: "="
            on_press: calculator.calculate(display.text)




